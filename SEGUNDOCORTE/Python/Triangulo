class  Triangulo:

    def __init__(self,base):
        self.base = base
    def __init__(self,altura):
        self.altura = altura
    def __init__(self,hipotenusa):
        self.hipotenusa = hipotenusa
    
    def area(self):
        return (self.base * self.altura) / 2
    
    def perimetro(self):
        return self.base + self.altura + self.hipotenusa
    
triangulo = Triangulo(8,6,10)
print("Area del triangulo: ", triangulo.area())
print("Perimetro del triangulo: ", triangulo.perimetro())
